<%= form_for @post, class: "form-horizontal" do |f| %>

  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime Notification", sticky: false, image: :error) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-1 control-label" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rationale, class: "col-sm-1 control-label" %>
    <%= f.text_area :rationale, class: "form-control", rows: 5 %>
  </div>

  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>

<% end %>
